<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="296dp"
            app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:srcCompat="@drawable/img_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                app:layout_collapseMode="none">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="24dp"
                    app:cardBackgroundColor="@color/white_28"
                    app:cardCornerRadius="28dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white_28"
                        android:src="?attr/homeAsUpIndicator" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="24dp"
                    app:cardBackgroundColor="@color/white_28"
                    app:cardCornerRadius="28dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white_28"
                        android:fontFamily="@font/sk_modernist_bold"
                        android:letterSpacing="0.1"
                        android:text="···"
                        android:textColor="@color/lighter_text"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-36dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/bottom_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="88dp"
                            android:layout_height="66dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="9dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sk_modernist_bold"
                                android:letterSpacing="0.05"
                                android:text="DoTA 2"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/ratingBar2"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxHeight="12dp"
                                    android:rating="4.9" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sk_modernist_regular"
                                    android:text="70M"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="11dp"
                        app:chipSpacingHorizontal="10dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="MOBA"
                            android:textColor="@color/tag_text"
                            android:textSize="10sp"
                            app:chipBackgroundColor="@color/tag_back"
                            app:chipCornerRadius="100dp"
                            app:chipEndPadding="0dp"
                            app:chipMinHeight="22dp"
                            app:chipMinTouchTargetSize="48dp"
                            app:chipStartPadding="0dp"
                            app:chipSurfaceColor="@color/tag_back"
                            app:textEndPadding="10dp"
                            app:textStartPadding="10dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="MULTIPLAYER"
                            android:textColor="@color/tag_text"
                            android:textSize="10sp"
                            app:chipBackgroundColor="@color/tag_back"
                            app:chipCornerRadius="100dp"
                            app:chipEndPadding="0dp"
                            app:chipMinHeight="22dp"
                            app:chipMinTouchTargetSize="48dp"
                            app:chipStartPadding="0dp"
                            app:chipSurfaceColor="@color/tag_back"
                            app:textEndPadding="10dp"
                            app:textStartPadding="10dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/tag_back"
                            android:fontFamily="@font/montserrat"
                            android:text="STRATEGY"
                            android:textColor="@color/tag_text"
                            android:textSize="10sp"
                            app:checkedIconVisible="false"
                            app:chipBackgroundColor="@color/tag_back"
                            app:chipCornerRadius="100dp"
                            app:chipEndPadding="0dp"
                            app:chipMinHeight="22dp"
                            app:chipMinTouchTargetSize="48dp"
                            app:chipStartPadding="0dp"
                            app:chipSurfaceColor="@color/tag_back"
                            app:textEndPadding="10dp"
                            app:textStartPadding="10dp" />
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.7"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:text="Dota 2 is a multiplayer online battle arena (MOBA) game which has two teams of five players compete to collectively destroy a large structure defended by the opposing team known as the &quot;Ancient&quot;, whilst defending their own."
                        android:textColor="@color/lighter_text_70"
                        android:textSize="12sp"
                        app:lineHeight="19dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/sk_modernist_regular"
                            android:text="@string/reviews_text"
                            android:textColor="@color/lighter_text"
                            android:textSize="16sp"
                            app:lineHeight="19.2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:fontFamily="@font/sk_modernist_regular"
                                android:text="4.9"
                                android:textColor="@color/white"
                                android:textSize="48sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:gravity="center|start"
                                android:orientation="vertical">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxHeight="12dp"
                                    android:rating="4.9" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sk_modernist_regular"
                                    android:text="70M reviews"
                                    android:textColor="@color/light_text"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/lighter_back" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/avatar1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                app:cardCornerRadius="18dp">

                                <ImageView
                                    android:id="@+id/avatarImage1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/user_1" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/userBlock1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/username1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="Auguste Conte"
                                        android:textColor="@color/light_text"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/commentDate1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="February 14, 2019"
                                        android:textColor="@color/white_40"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sk_modernist_regular"
                            android:text="“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”"
                            android:textAlignment="viewStart"
                            android:textColor="@color/light_text"
                            android:textSize="12sp"
                            app:lineHeight="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/avatar2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                app:cardCornerRadius="18dp">

                                <ImageView
                                    android:id="@+id/avatarImage2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/user_2" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/userBlock2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/username2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="Jang Marcelino"
                                        android:textColor="@color/light_text"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/commentDate2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="February 14, 2019"
                                        android:textColor="@color/white_40"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/comment2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sk_modernist_regular"
                            android:text="“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”"
                            android:textAlignment="viewStart"
                            android:textColor="@color/light_text"
                            android:textSize="12sp"
                            app:lineHeight="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/avatar3"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                app:cardCornerRadius="18dp">

                                <ImageView
                                    android:id="@+id/avatarImage3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/user_2" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/userBlock3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/username3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="Jang Marcelino"
                                        android:textColor="@color/light_text"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/commentDate3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sk_modernist_regular"
                                        android:text="February 14, 2019"
                                        android:textColor="@color/white_40"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/comment3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sk_modernist_regular"
                            android:text="“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”"
                            android:textAlignment="viewStart"
                            android:textColor="@color/light_text"
                            android:textSize="12sp"
                            app:lineHeight="20dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/sk_modernist_bold"
                        android:letterSpacing="0.06"
                        android:text="@string/install"
                        android:textAllCaps="false"
                        android:textColor="@color/background"
                        android:textSize="16sp"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/logo" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>